@model otce_project_final.Models.Product

<!-- Style changes here also need to be made in Create/Delete Views! -->
<form method="post" asp-action="DeleteProduct">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Name" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Price" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <small class="form-text text-muted">300 character limit.</small>
                        <textarea disabled asp-for="Description" class="form-control" rows="6"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                            <input disabled asp-for="Category.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col pl-0">
                            <input type="submit" class="btn btn-danger w-100" value="Delete"/>
                        </div>
                        <div class="col pl-0">
                            <a asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @if( Model.Id != 0)
                {
                    <img class="img-thumbnail" src="@GlobalConstants.ImagePath@Model.Image" />
                }
            </div>
        </div>
    </div>
</form>
