@model IEnumerable<otce_project_final.Models.Product>

<div class="container p-3">
    <div class="row pt-4 mb-2">
        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="CreateUpdate" class="btn btn-primary"><i class="fas fa-plus fa-sm"></i>&nbsp; Add New</a>
        </div>
    </div>

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var prod in Model)
                {
                    <tr>
                        <td>@prod.Name</td>
                        <td>@prod.Price</td>
                        <td>@prod.Category.Name</td>
                        <td class="text-right">
                            <a asp-route-Id="@prod.Id" asp-action="CreateUpdate" class="btn btn-success"><i class="fas fa-pencil-alt"></i></a>
                            <a asp-route-Id="@prod.Id" asp-action="Delete" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No products exist.</p>
    }
</div>
