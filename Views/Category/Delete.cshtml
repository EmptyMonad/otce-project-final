@model otce_project_final.Models.Category;

<form method="post" asp-action="DeleteCategory">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="pl-3">Delete Category</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <!-- Hidden Id input needed for Update() in Controller -->
                <input asp-for="Id" hidden />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" disabled/>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col pl-0">
                            <input type="submit" class="btn btn-danger w-100" value="Delete"/>
                        </div>
                        <div class="col pl-0">
                            <a asp-action="Index" class="btn btn-secondary w-100">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</form>